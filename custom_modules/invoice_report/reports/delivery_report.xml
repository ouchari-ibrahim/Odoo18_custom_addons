<odoo>
    <template id="delivery_note_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="company" t-value="o.company_id"/>
                <t t-call="web.external_layout_standard">
                    <div class="page" style="page-break-inside: avoid;">
                        <!-- Header and Company Details -->
                        <h3>Bon de Livraison</h3>
                      
                        <!-- Add Content Specific to Bon de Livraison -->
                        <!-- Order Lines Table -->
                        <table class="table table-sm mt-4">
                            <!-- Same style as Sale Order Report -->
                            <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th>Demande</th>
                                    <th>Quantit√©</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.move_ids_without_package" t-as="line">
                                    <!-- Product Name -->
                                    <td style="border: 1px solid black;">
                                        <span t-field="line.product_id.name"/>
                                    </td>

                                    <!-- Unit of Measure -->
                                    <td style="border: 1px solid black;">
                                        <span t-field="line.product_uom.name"/>
                                    </td>

                                    <!-- Quantity -->
                                    <td class="text-right" style="border: 1px solid black;">
                                        <span t-field="line.product_uom_qty"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <!-- Footer Section -->
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Cachet Et Signature :</strong>
                            </div>
                            <div class="col-6 text-end">
                                <strong>Signature Client :</strong>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>


    <record id="action_delivery_note_report" model="ir.actions.report">
        <field name="name">Imprimer Bon de Livraison</field>
        <field name="type">ir.actions.report</field>
        <field name="report_name">invoice_report.delivery_note_report_template</field>
        <field name="report_file">invoice_report.delivery_note_report_template</field>
        <field name="report_type">qweb-pdf</field>
        <field name="model">stock.picking</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">action</field>
        <field name="print_report_name">'Bon de livraison - %s - %s' % (object.partner_id.name or '', object.name)</field>

    </record>

</odoo>