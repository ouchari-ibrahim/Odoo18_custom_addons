<odoo>
    <record id="view_move_form_inherit_debug_lines" model="ir.ui.view">
        <field name="name">account.move.form.debug.lines</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_view_all_move_lines"
                            type="object"
                            string="View All Lines"
                            class="oe_highlight"/>
                </header>
            </xpath>
        </field>
    </record>


</odoo>
