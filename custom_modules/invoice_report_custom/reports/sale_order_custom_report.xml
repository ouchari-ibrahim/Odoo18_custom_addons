<odoo>
    <template id="sale_order_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="company" t-value="o.company_id"/>
                <t t-call="web.external_layout_standard">
                    <div class="page" style="page-break-inside: avoid;">

                        <div class="row justify-content-between">
                            <div class="col-md-5 col-6 p-2"
                                 style="font-size: 1.2rem; line-height: 1.5; border: 2px solid #ddd; border-radius: 16px; background-color: #f9f9f9;">
                                <div>
                                    <strong>FACTURE PROFORMA :</strong>
                                    <span t-field="o.name"/>
                                </div>
                                <div>
                                    <strong>Date :</strong>
                                    <span t-field="o.date_order"/>
                                </div>
                                <div>
                                    <strong>Affaire suivie par :</strong>
                                    <span t-field="user.name"/>
                                    /
                                    <span t-field="user.phone"/>
                                </div>
                            </div>
                            <div class="col-md-5 col-5 p-2"
                                 style="font-size: 1.2rem; line-height: 1.5; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9;">
                                <div>
                                    <strong>A l'attention de :</strong>
                                    <span t-field="o.partner_id.name"/>
                                </div>
                                <div>
                                    <strong>Prospect :</strong>
                                    <span t-field="o.partner_id.name"/>
                                </div>
                                <div>
                                    <strong>ID fiscale :</strong>
                                    <span t-field="o.partner_id.vat"/>
                                </div>
                                <div>
                                    <strong>Téléphone :</strong>
                                    <span t-field="o.partner_id.phone"/>
                                </div>
                            </div>
                        </div>

                        <!-- Order Lines Table -->
               <table class="table table-sm mt-4" style="border: 1px solid black; border-radius: 18px; border-collapse: separate; border-spacing: 0; width: 100%; font-family: Arial, sans-serif;">
    <thead style="background-color: #f8f9fa; border-bottom: 2px solid black;">
        <tr>
            <th style="padding: 8px; text-align: left; border-bottom: 2px solid black; border-top: none;">Ref</th>
            <th style="padding: 8px; text-align: center; border-bottom: 2px solid black; border-top: none;">Image</th>
            <th style="padding: 8px; text-align: left; border-bottom: 2px solid black; border-top: none;">Designation</th>
            <th style="padding: 8px; text-align: center; border-bottom: 2px solid black;  border-top: none;">Qte</th>
            <th style="padding: 8px; text-align: center; border-bottom: 2px solid black;  border-top: none;">PU HT</th>
            <th style="padding: 8px; text-align: center; border-bottom: 2px solid black;  border-top: none;">Discount</th>
            <th style="padding: 8px; text-align: center; border-bottom: 2px solid black ;  border-top: none;">PU Net HT</th>
            <th style="padding: 8px; text-align: center; border-bottom: 2px solid black;  border-top: none;">TVA (%)</th>
            <th style="padding: 8px; text-align: center; border-bottom: 2px solid black;  border-top: none;">Mnt TTC</th>
        </tr>
    </thead>
    <tbody>
        <tr t-foreach="o.order_line" t-as="line" style="border-bottom: 1px solid #ddd;">
            <td style="padding: 8px; text-align: left; border-top: none; border-bottom: none;">
                <span t-field="line.product_id.default_code"/>
            </td>
            <td style="padding: 8px; text-align: center; border-top: none; border-bottom: none; border-left: 1px solid black; border-right: 1px solid black;">
                <img t-if="line.product_id.image_128" t-att-src="image_data_uri(line.product_id.image_128)" style="max-height: 80px;"/>
            </td>
            <td style="padding: 8px; text-align: left; border-top: none; border-bottom: none; border-left: 1px solid black; border-right: 1px solid black;">
                <span t-field="line.name"/>
            </td>
            <td style="padding: 8px; text-align: center; border-top: none; border-bottom: none; border-right: 1px solid black;">
                <span t-field="line.product_uom_qty"/>
            </td>
            <td style="padding: 8px; text-align: center; border-top: none; border-bottom: none; border-right: 1px solid black;">
                <span t-field="line.price_unit"/>
            </td>
            <td style="padding: 8px; text-align: center; border-top: none; border-bottom: none; border-right: 1px solid black;">
                <span t-field="line.discount"/>%
            </td>
            <td style="padding: 8px; text-align: center; border-top: none; border-bottom: none; border-right: 1px solid black;">
                <span t-esc="line.price_unit * (1 - (line.discount or 0.0) / 100.0)" t-options='{"widget": "float", "precision": 2}'/>
            </td>

            <td style="padding: 8px; text-align: center; border-top: none; border-bottom: none; border-left: 1px solid black; border-right: 1px solid black;">
                <span t-esc="line.tax_id[0].amount if line.tax_id else 0"/>
            </td>
            <td style="padding: 8px; text-align: center; border-top: none; border-bottom: none;">
                <span t-field="line.price_total"/>
            </td>
        </tr>
    </tbody>
</table>


                        <!-- Totals Section -->
                        <div class="row justify-content-between">
                            <div class="col-md-4 col-5 p-3"
                                 style="border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9;">
                                <div>
                                    <strong>Total en mots :</strong>
                                    <span t-field="o.amount_total_text"/>
                                </div>
                            </div>
                            <div class="col-md-4 col-5 p-3">
                                <table class="table table-sm"
                                       style="border: 1px solid #ddd; border-radius: 8px; overflow: hidden;">
                                    <tr>
                                        <td><strong>TOTAL HT</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>TOTAL REMISE</strong></td>
                                        <td class="text-right">
                                            <span t-esc="sum(line.product_uom_qty * line.price_unit * line.discount/100 for line in o.order_line)"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>TOTAL NET HT</strong></td>
                                        <td class="text-right">
                                            <span t-esc="o.amount_untaxed - sum(line.product_uom_qty * line.price_unit * line.discount/100 for line in o.order_line)"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>TOTAL TVA</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_tax"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>TIMBRE</strong></td>
                                        <td class="text-right">
                                            <span t-esc="1.000"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>TOTAL TTC</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Footer Section - Same Page -->
                        <div class="row justify-content-between mt-4" style="page-break-inside: avoid;">
                            <div class="col-6">
                                <strong>Cachet Et Signature :</strong>
                            </div>
                            <div class="col-6 text-end">
                                <strong>Signature Client :</strong>
                            </div>
                        </div>
                        <div class="row mt-3" style="page-break-inside: avoid;">
                            <div class="col-6">
                                <strong>Imprimé le :</strong>
                                <span t-esc="time.strftime('%Y-%m-%d %H:%M:%S')"/>
                                <strong>par :</strong>
                                <span t-esc="user.name"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_sale_order_report" model="ir.actions.report">
        <field name="name">Sale Order Report</field>
        <field name="type">ir.actions.report</field>
        <field name="report_name">invoice_report_custom.sale_order_report_template</field>
        <field name="report_file">invoice_report_custom.sale_order_report_template</field>
        <field name="report_type">qweb-pdf</field>
        <field name="model">sale.order</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">action</field>
        <field name="print_report_name">'FACTURE PROFORMA ' + object.name</field>
</record>
</odoo>