<odoo>
    <record id="view_move_form_inherit_invoice_report_custom" model="ir.ui.view">
        <field name="name">account.move.form.inherit.invoice.report</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">

                <field name="amount_total_text" invisible="1" string="Text VALUE"/>

            </xpath>

        </field>
    </record>
    <record id="view_sale_order_ampount_text" model="ir.ui.view">
        <field name="name">sale.order.amount.text</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">

                <field name="amount_total_text" invisible="1" string="Text VALUE"/>

            </xpath>

        </field>
    </record>


</odoo>
