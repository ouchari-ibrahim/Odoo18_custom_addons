<odoo>
    <record id="view_order_form_inherit_print" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.print</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_generate_report"
                        string="Imprimer"
                        type="object"
                        class="btn-primary"
                        icon="fa-print"/>
            </xpath>
        </field>
    </record>
</odoo>
