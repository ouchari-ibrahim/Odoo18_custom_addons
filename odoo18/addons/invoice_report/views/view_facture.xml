<odoo>
    <record id="view_facture_form_inherit_print" model="ir.ui.view">
        <field name="name">facture.form.inherit.print</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">


            <xpath expr="//group" position="after">
                <group>
<!--                    <field name="apply_timbre"/>-->
                    <field name="report_without_image" invisible="1"/>
                    <field name="reduced_amount" invisible="1"/>
                    <field name="show_reduction" invisible="1"/>


                </group>
            </xpath>


<xpath expr="//field[@name='amount_residual']" position="after">
    <field name="reduced_amount"
           string="Mnt après réduction"
           widget="monetary"
           invisible="show_reduction != True"
    />
</xpath>
            <!--                <xpath expr="//field[@name='amount_total']" position="after">-->
            <!--            </xpath>-->
        </field>
    </record>
</odoo>