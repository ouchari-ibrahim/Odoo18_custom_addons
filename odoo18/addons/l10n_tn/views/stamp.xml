<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="account_invoice_form_stamp" model="ir.ui.view">
        <field name="name">account.invoice.form.stamp</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
<xpath expr="//field[@name='partner_id']" position="after">
    <!-- Checkbox for Timbre exemption with label -->
    <label for="is_stamp_exempt" string="Exonération Timbre"/>
    <field name="is_stamp_exempt"/>

    <!-- Label and field for applied Timbre -->
    <label for="timbre_applied" string="Timbre Appliquée"/>
    <field name="timbre_applied" readonly="1"/>
</xpath>

            <xpath expr="//field[@name='tax_ids']" position="after">
                <!-- Ajouter le champ 'is_stamp_tax' (il peut être invisible mais doit être présent pour que la logique fonctionne) -->
                <field name="is_stamp_tax" column_invisible="True"/>
            </xpath>

           <!-- Rendre les lignes de timbre invisibles -->
            <xpath expr="//field[@name='invoice_line_ids']/list" position="attributes">
                <attribute name="decoration-muted">is_stamp_tax</attribute>
            </xpath>

             <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='product_id']" position="attributes">
                <attribute name="invisible">is_stamp_tax</attribute>
            </xpath>

             <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='name']" position="attributes">
                <attribute name="invisible">is_stamp_tax</attribute>
            </xpath>

             <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='account_id']" position="attributes">
                <attribute name="invisible">is_stamp_tax</attribute>
            </xpath>

             <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='quantity']" position="attributes">
                <attribute name="invisible">is_stamp_tax</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='quantity']" position="attributes">
                <attribute name="invisible">is_stamp_tax</attribute>
            </xpath>

             <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_unit']" position="attributes">
                <attribute name="invisible">is_stamp_tax</attribute>
             </xpath>
                 <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='tax_ids']" position="attributes">
                <attribute name="invisible">is_stamp_tax</attribute>

            </xpath>

             <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_subtotal']" position="attributes">
                <attribute name="invisible">is_stamp_tax</attribute>
            </xpath>

             <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='discount']" position="attributes">
                <attribute name="invisible">is_stamp_tax</attribute>
            </xpath>

             <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_total']" position="attributes">
                <attribute name="invisible">is_stamp_tax</attribute>
            </xpath>


        </field>
    </record>


</odoo>
